generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
}

enum PlanCode {
  FREE
  PRO
}

enum FileType {
  VIDEO_WEBM
  VIDEO_MP4
}

enum VideoStatus {
  CREATED
  RECORDING
  RECORDED
  UPLOADING
  READY
  FAILED
}

model Plan {
  id                 String   @id @default(cuid())
  code               PlanCode @unique
  name               String
  lifetimeVideoLimit Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  tenantPlans TenantPlan[]
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users       User[]
  sessions    Session[]
  tenantPlans TenantPlan[]
  usage       TenantUsage?
  files       File[]
  videos      Video[]
  listings    Listing[]
}

model File {
  id              String   @id @default(cuid())
  tenantId        String
  createdByUserId String
  type            FileType
  name            String
  originalName    String
  mime            String
  size            Int
  storageKey      String
  checksumSha256  String?
  createdAt       DateTime @default(now())

  tenant    Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdBy User   @relation(fields: [createdByUserId], references: [id])

  // Relation to Video as output file
  videoOutput Video[] @relation("VideoOutputFile")

  @@index([tenantId])
  @@index([tenantId, createdAt])
}

model TenantPlan {
  id        String    @id @default(cuid())
  tenantId  String
  planId    String
  isActive  Boolean   @default(true)
  startedAt DateTime  @default(now())
  endedAt   DateTime?
  createdAt DateTime  @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  plan   Plan   @relation(fields: [planId], references: [id])

  @@index([tenantId])
  @@index([isActive])
}

model TenantUsage {
  id                    String   @id @default(cuid())
  tenantId              String   @unique
  videosCreatedLifetime Int      @default(0)
  updatedAt             DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model User {
  id           String   @id @default(cuid())
  tenantId     String
  email        String   @unique
  passwordHash String   @default("")
  name         String?
  role         UserRole @default(MEMBER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  sessions Session[]
  files    File[]
  videos   Video[]
  listings Listing[]

  @@index([tenantId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tenantId  String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tenantId])
  @@index([expiresAt])
}

model AppConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Video {
  id              String      @id @default(cuid())
  tenantId        String
  createdByUserId String
  status          VideoStatus @default(CREATED)
  errorMessage    String?

  // Source listing
  listingId String?

  // Output video file (set after upload)
  outputFileId String?

  // Recording metadata
  durationMs   Int?
  fps          Int?
  width        Int?
  height       Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdBy  User     @relation(fields: [createdByUserId], references: [id])
  listing    Listing? @relation(fields: [listingId], references: [id], onDelete: SetNull)
  outputFile File?    @relation("VideoOutputFile", fields: [outputFileId], references: [id])

  @@index([tenantId])
  @@index([tenantId, status])
  @@index([createdByUserId])
  @@index([listingId])
}

model Listing {
  id              String  @id @default(cuid())
  tenantId        String
  createdByUserId String
  title           String
  description     String?

  // Parcel information from TKGM
  parcelInfo Json // { il, ilce, mahalle, ada, parsel, mahalleId }

  // Geometry data (GeoJSON FeatureCollection)
  geometry Json

  // Computed from geometry for quick access
  centroid Json // { lat, lng }
  bbox     Json // [west, south, east, north]

  // AI-generated description (placeholder for future)
  aiDescription String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant    Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdBy User    @relation(fields: [createdByUserId], references: [id])
  videos    Video[]

  @@index([tenantId])
  @@index([tenantId, createdAt])
  @@index([createdByUserId])
}
